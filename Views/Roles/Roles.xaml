<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DPAV.Views.Roles.Roles"
             Title="">
    <VerticalStackLayout Padding="20" Spacing="10">

        <!-- Título de la página -->
        <Label Text="Roles" 
           FontSize="40" 
           FontAttributes="Bold" 
           HorizontalOptions="Center" 
           Margin="0,0,0,20"/>

        <!-- Botón de agregar perro -->
        <Button Text="Agregar Rol" 
            BackgroundColor="Green" 
            TextColor="White" 
            CornerRadius="10"
            HorizontalOptions="FillAndExpand"
            Margin="0,0,0,10"/>

        <Grid ColumnDefinitions="*,Auto,Auto" VerticalOptions="Center">

            <!-- Nombre del perro -->
            <Label Grid.Column="0"
               Text="Administrador" 
               FontSize="24" 
               VerticalOptions="CenterAndExpand" 
               HorizontalOptions="Start" />

            <!-- Botón Modificar -->
            <Button Grid.Column="1"
                Text="Modificar" 
                BackgroundColor="Orange" 
                TextColor="White" 
                HorizontalOptions="End"
                Margin="5,0,5,0"/>

            <!-- Botón Eliminar -->
            <Button Grid.Column="2"
                Text="Eliminar" 
                BackgroundColor="Red" 
                TextColor="White" 
                HorizontalOptions="End"
                Margin="5,0,5,0"/>
        </Grid>

        <!-- Lista de perros -->
        <CollectionView x:Name="RolesCollectionView"
                    ItemsSource="{Binding ListaDeRoles}"
                    SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame CornerRadius="10" Padding="10" Margin="0,0,0,10" BackgroundColor="LightGray">
                        <Grid ColumnDefinitions="*,Auto,Auto" VerticalOptions="Center">

                            <!-- Nombre del perro -->
                            <Label Grid.Column="0"
                               Text="{Binding Nombre}" 
                               FontSize="24" 
                               VerticalOptions="CenterAndExpand" 
                               HorizontalOptions="Start" />

                            <!-- Botón Modificar -->
                            <Button Grid.Column="1"
                                Text="Modificar" 
                                BackgroundColor="Orange" 
                                TextColor="White" 
                                HorizontalOptions="End"
                                Margin="5,0,5,0"/>

                            <!-- Botón Eliminar -->
                            <Button Grid.Column="2"
                                Text="Eliminar" 
                                BackgroundColor="Red" 
                                TextColor="White" 
                                HorizontalOptions="End"
                                Margin="5,0,5,0"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>